{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "packagePatterns": ["^@clr/", "^@cds/"],
      "groupName": "clarity monorepo"
    },
    {
      "matchBaseBranches": ["master"],
      "packagePatterns": ["*"],
      "enabled": true
    },
    {
      "matchBaseBranches": ["website"],
      "packagePatterns": ["*"],
      "excludePackagePatterns": ["@porscheinformatik/clr-addons", "^@clr/", "^@cds/"],
      "enabled": false
    }
  ],
  "baseBranches": ["master", "website"]
}
